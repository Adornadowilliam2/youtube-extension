{
  "manifest_version": 3,
  "name": "Replace All YouTube Thumbnails",
  "version": "1.0",
  "description": "Replaces all YouTube video thumbnails with a custom image.",
  "permissions": [],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
